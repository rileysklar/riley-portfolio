  <style>
    .two-column-list {
      columns: 2; /* Create two columns */
      column-gap: 20px; /* Adjust the gap between columns as needed */
    }

    .job-title,
    .duration,
    .location {
      padding-left: 1em;
      padding-top: 0.5em;
    }

    .about {
      display: flex;
      flex-direction: column;
      gap: 3.5rem;
    }

    .content {
      padding: 2em;
      background-color: var(--gray-900);
      border-radius: 20px;
    }

    img {
      margin-top: 1.5rem;
      border-radius: 1.5rem;
      box-shadow: var(--shadow-md);
    }

    section {
      display: flex;
      flex-direction: column;
      gap: 0.5rem;
      color: var(--gray-200);
    }

    .section-title {
      grid-column-start: 1;
      font-size: var(--text-xl);
      color: var(--gray-0);
      text-align: center;
    }

    .content {
      grid-column: 2 / 4;
    }

    .content :global(a) {
      text-decoration: 1px solid underline transparent;
      text-underline-offset: 0.25em;
      transition: text-decoration-color var(--theme-transition);
    }

    .content :global(a:hover),
    .content :global(a:focus) {
      text-decoration-color: currentColor;
    }

    .tag-bubble {
      display: flex;
      flex-direction: row;
      gap: 0.5em;
      overflow-wrap: break-word;
      flex-wrap: wrap;
      text-wrap: balance;
      padding-top: 1em;
      justify-content: flex-start;
    }

    .tagGIS {
      background-color: var(--gray-900);
      border-radius: 100em;
      padding: 0.25em 1em;
      font-size: 1em;
      color: var(--gray-50);
    }

    li {
      list-style: circle;
      font-size: 0.75em;
      text-wrap: pretty;
      margin-left: 3em;
      line-height: 2;
    }

    @media (min-width: 50em) {
      .about {
        display: grid;
        grid-template-columns: 1fr 60% 1fr;
      }

      .content h5 {
        font-size: var(--text-2xl);
      }

      .about > :global(:first-child) {
        grid-column-start: 2;
      }

      section {
        display: contents;
        font-size: var(--text-lg);
      }

      .section-title {
        text-align: left;
      }
    }
  </style>
</BaseLayout>
